@model BankOfSimba.Models.BankAccount
@{
    Layout = "_Layout";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <table id="tablePreview" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Balance</th>
                <th>Animal Type</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>@ViewData["name"]</td>
                <td>@ViewData["balance"]</td>
                <td>@ViewData["animal"]</td>
            </tr>
        </tbody>
    </table>
  



</body>
</html>